driver = mysql
connect = host={{ DBHOST }} dbname={{ DBNAME }} user={{ DBUSER }} password={{ DBPASS }}
default_pass_scheme = SHA512-CRYPT
iterate_query = SELECT username AS user FROM mailbox
password_query = SELECT password, CONCAT('*:storage=',quota,'M') AS userdb_quota_rule FROM mailbox WHERE username = '%u' AND active = 1
user_query = SELECT CONCAT('*:storage=',quota,'M') AS quota_rule FROM mailbox WHERE username = '%u' AND active = 1
