hosts    = {{ DBHOST }}
user     = {{ DBUSER }}
password = {{ DBPASS }}
dbname   = {{ DBNAME }}

query = SELECT maildir FROM mailbox, alias_domain \
        WHERE alias_domain.alias_domain = '%d' \
          AND mailbox.username = CONCAT('%u', '@', alias_domain.target_domain) \
          AND mailbox.active = 1 \
          AND alias_domain.active = 1